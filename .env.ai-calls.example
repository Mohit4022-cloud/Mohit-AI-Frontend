# AI Calls Feature Environment Variables

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_default_voice_id
ELEVENLABS_MODEL_ID=eleven_flash_v2_5
ELEVENLABS_OUTPUT_FORMAT=ulaw_8000
ELEVENLABS_OPTIMIZE_STREAMING_LATENCY=3
ELEVENLABS_VOICE_SETTINGS={"stability":0.5,"similarity_boost":0.75,"style":0.0,"use_speaker_boost":true}

# WebSocket Configuration
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/socket.io/

# AI Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key
AI_MODEL=gpt-4-turbo-preview
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=150

# Call Recording Storage (S3 or similar)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=mohit-ai-call-recordings

# Database Configuration for AI Calls
DATABASE_URL=postgresql://user:password@localhost:5432/mohit_ai_calls

# Redis Configuration (for real-time features)
REDIS_URL=redis://localhost:6379

# Security
WEBHOOK_SECRET=your_webhook_secret_for_twilio
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Rate Limiting
CALLS_PER_MINUTE=10
CALLS_PER_HOUR=100
CALLS_PER_DAY=1000

# Compliance
ENABLE_CALL_RECORDING=true
RECORDING_ANNOUNCEMENT=true
AI_DISCLOSURE_REQUIRED=true
DNC_CHECK_ENABLED=true
DNC_API_KEY=your_dnc_api_key

# Feature Flags
ENABLE_AI_CALLS=true
ENABLE_HUMAN_TAKEOVER=true
ENABLE_REAL_TIME_TRANSCRIPTION=true
ENABLE_CALL_ANALYTICS=true
ENABLE_VOICE_CLONING=false

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_AVAILABILITY_ZONE=us-east-1a
AWS_DEPLOYMENT_TYPE=local